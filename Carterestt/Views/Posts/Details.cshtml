@model Data.Post

@{
    ViewBag.Title = "Details";

}

<h2>@Model.Name</h2>
<div class="row">
    <div class="col-md-12">
        <img src="~/Images/@Model.FileName" class="img-responsive" alt="@Model.Name" />
    </div>
    <div class="col-md-12 text-center" style="font-size: 30px;">
        @Model.Decription
    </div>
    @{
        if (Model.UserId != null)
        {
            <div class="col-md-12 text-center">
                Снимка: @Model.UserId
            </div>
        }
    }
</div>
